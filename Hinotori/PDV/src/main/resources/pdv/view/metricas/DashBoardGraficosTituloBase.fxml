<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="spRootBase" stylesheets="@../../css/White_DashBoard_Graficos.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pdv.controller.metricas.DashBoardGraficosMeio">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <VBox styleClass="vbBackgroundCompra" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="lblCompras" text="R$ 100,00" textFill="WHITE" VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <Label text="Compras" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="2.0" left="10.0" right="5.0" top="2.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </VBox>
            <VBox styleClass="vbBackgroundVenda" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="lblVendas" text="R$ 1.500,00" textFill="WHITE" VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <Label text="Vendas" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="2.0" left="10.0" right="5.0" top="2.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </VBox>
            <VBox styleClass="vbBackgroundTotal" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="lblTotal" text="R$ 1.400,00" textFill="WHITE" VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <Label text="Total" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="2.0" left="10.0" right="5.0" top="2.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </VBox>
         </children>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</StackPane>
